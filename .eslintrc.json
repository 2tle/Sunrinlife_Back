{
    "plugins": [
        "prettier",
        "sort-class-members"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 7,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": false
        }
    },
    "env": {
        "browser": false,
        "node": true,
        "jest": true
    },
    "ignorePatterns": [
        "node_modules/"
    ],
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "endOfLine": "auto"
            }
        ],
        "no-unused-vars": "warn",
        "lines-between-class-members": ["error", "always"],
        "sort-class-members/sort-class-members": [
			"error",
			{
				"order": [
					"[static-properties]",
					"[static-methods]",
					"[properties]",
					"[conventional-private-properties]",
					"constructor",
					"[methods]",
					"[conventional-private-methods]"
				],
                "groups": {
                    "methods": [{ "type": "method", "sort": "alphabetical" }]
                },
				"accessorPairPositioning": "getThenSet"
			}
		]
    }
}